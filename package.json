{
  "name": "scribe",
  "displayName": "Scribe",
  "description": "VS Code activity tracker",
  "publisher": "pr3ciousCanCod3",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Scribe.helloWorld",
        "title": "Hello from Scribe"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Scribe Settings",
      "properties": {
        "activityTracker.interval": {
          "type": "number",
          "default": 30,
          "description": "Commit interval in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.80.0",
    "mocha": "^11.7.1",
    "typescript": "^5.2.2"
  }
}
