{
  "name": "scribe-dev-logger",
  "displayName": "Scribe â€“ Developer Activity Logger",
  "description": "Automatically track coding activity and generate Git-backed summaries and snapshots in VS Code.",
  "version": "0.0.4",
  "publisher": "pr3ciousCanCod3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Awenes/Scribe.git"
  },
  "bugs": {
    "url": "https://github.com/Awenes/Scribe/issues"
  },
  "homepage": "https://github.com/Awenes/Scribe#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "developer logger",
    "activity tracker",
    "VS Code logging",
    "git summary",
    "snapshot restore"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Scribe.helloWorld",
        "title": "Hello from Scribe"
      },
      {
        "command": "Scribe.restoreSnapshot",
        "title": "Restore Snapshot"
      },
      {
        "command": "Scribe.showDiff",
        "title": "Show Snapshot Diff"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Scribe Settings",
      "properties": {
        "activityTracker.interval": {
          "type": "number",
          "default": 30,
          "description": "Commit interval in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.80.0",
    "mocha": "^11.7.1",
    "typescript": "^5.2.2"
  }
}
